{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2023"
        ],
        "module": "Node16",
        "moduleResolution": "Node16",
        "baseUrl": "./",
        "rootDir": "./src",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
    },
    "include": [
        "./src/**/*.ts",
    ],
    "exclude": [
        "./node_modules",
        "./dist",
        "./src/**/tests/**/*.ts",
    ],
}